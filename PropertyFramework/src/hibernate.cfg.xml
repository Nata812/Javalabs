<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.password">1234</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost/property_framework</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
  <property name="current_session_context_class">thread</property>
  <mapping resource="ru/itva/propertyframework/logic/ObjectValue.hbm.xml"/>
  <mapping resource="ru/itva/propertyframework/logic/Family.hbm.xml"/>
  <mapping resource="ru/itva/propertyframework/logic/Style.hbm.xml"/>
  <mapping resource="ru/itva/propertyframework/logic/T_Object.hbm.xml"/>
  <mapping resource="ru/itva/propertyframework/logic/T_Class.hbm.xml"/>
  <mapping resource="ru/itva/propertyframework/logic/ClassStyle.hbm.xml"/>
 </session-factory>
</hibernate-configuration>
